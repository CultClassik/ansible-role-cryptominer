#!/bin/bash
eth_addr={{ crminer_crypto.eth.addr }}

cd /minebox/phoenixminer

./PhoenixMiner \
  -pool ssl://{{ crminer_crypto.eth.pool1 }}:{{ crminer_crypto.eth.pool_port['ssl'] }} \
  -pool2 ssl://{{ crminer_crypto.eth.pool2 }}:{{ crminer_crypto.eth.pool_port['ssl'] }} \
  -coin eth \
  -amd -acm \
  -clKernel 2 \
  -nvmem 1 \
  -wal ${eth_addr}.${HOSTNAME}
